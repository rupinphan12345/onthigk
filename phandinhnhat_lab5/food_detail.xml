<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgPicture2"
        android:layout_width="250dp"
        android:layout_height="222dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pink_donut_1" />

    <TextView
        android:id="@+id/txtName2"
        android:layout_width="142dp"
        android:layout_height="29dp"
        android:layout_marginTop="40dp"
        android:text="Pink Donut"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPicture2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="168dp"
        android:layout_height="29dp"
        android:layout_marginTop="4dp"
        android:text="Spicy tasty donut family"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/txtName2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtName2"
        app:layout_constraintTop_toBottomOf="@+id/txtName2" />

    <TextView
        android:id="@+id/txtPrice2"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPicture2" />

    <Button
        android:id="@+id/btnAddToCard"
        android:layout_width="301dp"
        android:layout_height="76dp"
        android:text="Add To Card"
        android:textSize="28sp"
        android:textStyle="bold"
        app:backgroundTint="#F1B000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />
</androidx.constraintlayout.widget.ConstraintLayout>