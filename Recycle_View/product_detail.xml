<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgProduct2"
        android:layout_width="136dp"
        android:layout_height="134dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtName2"
        android:layout_width="154dp"
        android:layout_height="82dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgProduct2"
        app:layout_constraintStart_toStartOf="@+id/imgProduct2"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct2" />

    <TextView
        android:id="@+id/txtPrice2"
        android:layout_width="118dp"
        android:layout_height="77dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/imgProduct2"
        app:layout_constraintStart_toEndOf="@+id/imgProduct2"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct2" />

    <Button
        android:id="@+id/button"
        android:layout_width="358dp"
        android:layout_height="76dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#D32222"
        android:text="Add to card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct2" />
</androidx.constraintlayout.widget.ConstraintLayout>